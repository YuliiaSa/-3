
package org.example;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        var scanner = new Scanner(System.in);


       while (true) {
           System.out.println("Витрата пального на 100 кілометрів?");
           var vitrata = scanner.nextDouble();
            System.out.println("Відстань, що проїхало авто?");
            var km = scanner.nextDouble();

            if (km == 0)
                break;

            var result = (vitrata / 100) * km;
            System.out.println("Result = " + result);}

    }

}
